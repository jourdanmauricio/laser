<div class="bg-slate-100 shadow-lg p-4 w-full md:w-1/2">
  <form
    action=""
    class="flex flex-col gap-8 mt-4"
  >
    <div class="flex flex-col w-full">
      <label
        class="text-sm text-blue-500"
        for="name"
        >Nombre
      </label>
      <input
        id="name"
        name="name"
        class="p-2 border border-slate-900 outline-none"
        type="text"
        placeholder="Jhon"
      />
    </div>

    <div class="flex flex-col w-full">
      <label
        class="text-sm text-blue-500"
        for="name"
        >Email
      </label>
      <input
        id="email"
        name="email"
        class="p-2 border border-slate-900 outline-none"
        type="text"
        placeholder="jhon@email.com"
      />
    </div>

    <div class="flex flex-col w-full">
      <label
        class="text-sm text-blue-500"
        for="name"
        >Mensaje
      </label>
      <textarea
        id="message"
        name="message"
        rows="5"
        class="p-2 border border-slate-900 outline-none"
        placeholder="Jhon"
      ></textarea>
    </div>

    <div
      class="bg-purple-500 border-none py-2 px-4 rounded cursor-pointer block ml-auto"
    >
      <input
        class="text-white text-lg cursor-pointer"
        type="submit"
        value="Send"
      />
    </div>
  </form>
</div>
