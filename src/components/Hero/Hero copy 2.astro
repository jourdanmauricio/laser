---
// import Menu from '../../components/Menu/Menu.astro';
import { getNetworks } from '../../services/networks';
import SocialNetworks from '../Footer/SocialNetworks.astro';

const networks = await getNetworks();
---

<div class="hero relative overflow-hidden h-screen max-h-[900px]">
  <!-- <Menu /> -->
  <div class="shape h-[60vh] 2xl:h-[50vh]">
    <img
      class="w-full h-full"
      src="/laser/images/hero-shape.png"
      alt=""
    />
  </div>
  <div
    class="flex flex-col pt-10 md:px-20 h-full max-h-full max-w-[1440px] mx-auto"
  >
    <div class="flex justify-center md:justify-between">
      <div
        class="text-3xl md:text-4xl flex gap-2.5 justify-center md:justify-start"
      >
        <h2 class="text-primary m-0">Lorem Ipsum</h2>
        <div class="overflow-hidden font-semibold h-[2.25rem] md:h-10">
          <ul class="text-red-500 animation mt-0">
            <li>Lorem 1</li>
            <li>Lorem 2</li>
            <li>Lorem 3</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="relative flex md:flex-row items-end md:items-center z-0 h-full">
      <div class="md:w-1/2 flex flex-col gap-8 md:gap-16 z-10 p-4 text-primary">
        <p class="text-xl text-slate-950">
          Neque porro quisquam est qui dolorem ipsum quia dolor sit amet,
          consectetur, adipisci velit..."
        </p>

        <button class="btn py-2 px-8 rounded block mx-auto md:ml-0">
          Cont√°ctanos</button
        >

        <SocialNetworks />
      </div>
      <!-- Image -->
      <div class="absolute bottom-0 md:relative md:w-1/2 h-full w-full -z-10">
        <img
          class="image"
          src="/laser/images/hero-img.png"
        />
        <img
          class="image"
          src="/laser/images/hero-img1.png"
        />
        <img
          class="image"
          src="/laser/images/hero-img2.png"
        />
      </div>
    </div>
  </div>
</div>

<style>
  .hero {
    background:
      linear-gradient(90deg, #80cde000, #41e1d166),
      url(/laser/images/modern-hospital-hero.jpg) no-repeat center center fixed;
    background-size: cover;
  }
  .shape {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 0;
  }
  .animation {
    animation: 6s linear 0s normal none infinite change;
  }
  @keyframes change {
    0% {
      margin-top: 0;
    }
    15% {
      margin-top: 0;
    }
    25% {
      margin-top: -40px;
    }
    40% {
      margin-top: -40px;
    }
    50% {
      margin-top: -80px;
    }
    65% {
      margin-top: -80px;
    }
    75% {
      margin-top: -40px;
    }
    85% {
      margin-top: -40px;
    }
    100% {
      margin-top: 0;
    }
  }

  @media (max-width: 769px) {
    @keyframes change {
      0% {
        margin-top: 0;
      }
      15% {
        margin-top: 0;
      }
      25% {
        margin-top: -36px;
      }
      40% {
        margin-top: -36px;
      }
      50% {
        margin-top: -72px;
      }
      65% {
        margin-top: -72px;
      }
      75% {
        margin-top: -36px;
      }
      85% {
        margin-top: -36px;
      }
      100% {
        margin-top: 0;
      }
    }
  }
  .background-container {
    position: relative;
    width: 100%;
    height: 400px;
    overflow: hidden;
  }

  .image {
    position: absolute;
    /* left: 0;
    bottom: 0; */
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center bottom;
    animation: changeBackground 12s infinite;
    animation-fill-mode: both;
    opacity: 0;
  }

  .image:nth-of-type(1) {
    animation-delay: 0s;
  }
  .image:nth-of-type(2) {
    animation-delay: 4s;
  }
  .image:nth-of-type(3) {
    animation-delay: 8s;
  }

  @keyframes changeBackground {
    0% {
      opacity: 0;
    }
    5% {
      opacity: 1;
    }
    28% {
      opacity: 1;
    }
    33% {
      opacity: 0;
    }
  }
</style>
