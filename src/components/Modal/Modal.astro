---
import Icon from 'astro-icon';
---

<input
  class="peer hidden"
  type="checkbox"
  id="btn-modal"
/>
<div
  class="w-full h-full fixed top-0 left-0 hidden justify-center items-center z-50 bg-slate-900 bg-opacity-70 peer-checked:flex"
>
  <div
    class="relative w-11/12 md:w-full max-w-[800px] p-5 bg-slate-100 rouded content-modal"
  >
    <label
      for="btn-modal"
      class="absolute top-2 right-2 cursor-pointer hover:bg-slate-200 p-1"
    >
      <Icon
        name="mdi:close-box-outline"
        class="w-6 h-6"
      />
    </label>
    <h2
      id="title"
      class="border-b border-b-gray-300"
    >
    </h2>

    <div class="p-4">
      <!-- Direccion -->
      <span class="flex gap-4 items-center">
        <Icon
          name="mdi:map-marker"
          class="w-5 h-5"
        />

        <p id="address"></p>
      </span>

      <!-- TelÃ©fono -->
      <span class="flex gap-4 items-center">
        <Icon
          name="mdi:phone"
          class="w-5 h-5"
        />
        <p id="phone"></p>
      </span>

      <!-- Email -->
      <span class="flex gap-4 items-center">
        <Icon
          name="mdi:email"
          class="w-5 h-5"
        />
        <p id="email"></p>
      </span>
    </div>

    <div
      class="h-[300px]"
      id="mapas"
    >
    </div>
